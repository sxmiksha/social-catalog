generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  // Relations
  reviews   Review[]
  logs      Log[]
  lists     List[]
}

model Movie {
  id        Int     @id @default(autoincrement())
  title     String
  posterUrl String?
  year      Int?
  reviews   Review[]
  logs      Log[]
}

model Book {
  id       Int    @id @default(autoincrement())
  title    String
  coverUrl String?
  author   String?
  reviews  Review[]
  logs     Log[]
}

model Review {
  id        Int      @id @default(autoincrement())
  content   String
  rating    Int?
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  movieId   Int?
  bookId    Int?
  createdAt DateTime @default(now())
}

model Log {
  id        Int      @id @default(autoincrement())
  status    String
  notes     String?
  date      DateTime?
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  movieId   Int?
  bookId    Int?
}

model List {
  id        Int      @id @default(autoincrement())
  title     String
  isPublic  Boolean  @default(true)
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  items     String?  // JSON string of items (for now)
}